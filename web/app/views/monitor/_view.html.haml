.row
  .col-md-4.col-md-offset-5
    - if !@style_setting.own_logo_image.blank?
      = image_tag(@style_setting.own_logo_image.thumb.url)
    %h1
      =@current_race_session.title

%table.table.table-striped
  %thead
    %tr
      %th
        place
      %th

      %th
        pilot
      %th
        fasted lap time
      %th
        last lap time
      %th
        laps
  %tbody
    - @current_race_session.listing.each_with_index do |entry,index|
      %tr
        %td
          = index + 1
        %td
          = image_tag(entry['pilot'].image.url,width: 50,height: 50)
        %td
          = entry['pilot'].name
        %td
          = entry['fastest_lap']['lap_time'].to_f / 1000
        %td
          = entry['last_lap']['lap_time'].to_f / 1000
        %td
          = entry['lap_count']
