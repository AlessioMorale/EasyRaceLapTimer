.panel.panel-default
  .panel-heading
    %h2
      Config Values
  .panel-body
    %table.table.table-striped
      %thead
      %tbody
        - ConfigValue.all.each do |config|
          %tr
            = form_tag(url_for({action: 'set_config_val',id: config.id})) do
              %td
                %strong
                  = config.name
              %td
                = text_field_tag :value, config.value
              %td
                = submit_tag 'save', class: 'btn btn-xs btn-primary'
